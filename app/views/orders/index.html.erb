<h1>Orders:</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Erstellt /<br> Beartbeitet</th>
      <th>Total</th>
      <th>Order status</th>
      <th>Produkte</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.updated_at.strftime("%d.%m.%y %H:%M") %></td>
        <td><%= order.total %> €</td>
        <td><%= order.order_status.name %></td>
        <td>
          <% order.order_items.each do |oi| %>
            <li><%= oi.product.name %></li>
          <% end %>
        </td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Sicher löschen, also wirklich sicher?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

