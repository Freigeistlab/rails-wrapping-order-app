<%= simple_form_for @product do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  
  <%= f.input :description %>
  
  <%= f.input :image, label: 'Image-URL eingeben' %>

  <%= f.input :price %>

  <%= f.input :active %>
  
  <%= f.association :product_group, label_method: :name, value_method: :id, include_blank: false %>

  <%= f.button :submit, class: "btn-primary" %>
<% end %>
