<div class="card" style="width: 18rem">
  <%= image_tag(product.image, {:class => "card-img-top", :style => "width: 100%; height: 150px; max-width: 350px; border: 1px solid #eee"}) if product.image.present? %>
  <div class="card-body d-flex flex-column">
    
    <h5 class="card-title"><%= product.name %></h5>
    <div class="mt-3 mb-4">
      <%= product.description %>
    </div>
    <div class="mt-3 mb-4">Preis: <span style="color: green"><%= number_to_currency product.price %></span></div>
    <!-- <button type="button" class="mt-auto btn btn-lg btn-block btn-primary">Get started</button> -->
    <div class="mt-auto text-center">
      <%= form_for order_item, remote: true do |f| %>
        <%#= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
        <%= f.hidden_field :quantity, value: 1 %>
        <%= f.hidden_field :product_id, value: product.id %>
        <%= f.hidden_field :product_group_id, value: product.product_group_id %>
        <%= f.submit "+", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

</div>


