<div class="card" style="width: 15rem">
  <%= image_tag(product.image, {:class => "card-img-top"}) if product.image.present? %>
  <div class="card-body">
    <h5 class="card-title"><%= product.name %></h5>
    <p class="card-text"><%= product.description %></p>
    <%= form_for order_item, remote: true do |f| %>
    <div class="text-left">Preis: <span style="color: green"><%= number_to_currency product.price %></span></div>
    <div class="text-center">
      <%#= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
      
        <%= f.hidden_field :quantity, value: 1 %>
        <%= f.hidden_field :product_id, value: product.id %>
        <%= f.hidden_field :product_group_id, value: product.product_group_id %>
        <%= f.submit "+", class: "btn btn-primary" %>
      
    </div>
    <% end %>

  </div>
</div>
