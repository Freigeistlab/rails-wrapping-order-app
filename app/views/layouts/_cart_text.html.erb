<div class="sidebar-item">
  <div class="make-me-sticky">
    <div class="cart-text">

      <div class="card">
        
        <div class="card">
          <img class="card-img-top" src="http://placehold.jp/ffffff/ffffff/250x250.png" alt="Card image cap" style="width: 100%; height: 250px">
          <% current_order.order_items.order(:product_group_id).each do |oi| %>
             <%= image_tag(oi.product.image, {:style => "position: absolute; width: 100%; height: 250px; max-width: 400px"}) if oi.product.image.present? %>
          <% end %>
        </div>
        <div class="card-body">
          <h5 class="card-title">
            <%= current_order.order_items.size %> Materialien ausgewÃ¤hlt
          </h5>
          <p class="card-text">
            <% current_order.order_items.order(:product_group_id).each do |oi| %>
              <li style="list-style: none;"><%= oi.product.product_group.name %>: <%= oi.product.name %></li>
            <% end %>
          </p>
        </div>
        <% if current_order.order_items.count > 0 %>
          <%= button_to "Zur Bestellung", cart_path, :method => :get, :class => "btn btn-primary btn-lg mb-5" %>
        <% end %>
      </div>

    </div>


  </div>
</div>
