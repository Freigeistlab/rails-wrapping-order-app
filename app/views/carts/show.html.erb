<div class="col-8">
  <div class="shopping-cart">
    <%= render "shopping_cart" %>
  </div>
</div>
<div class="col-4">
  <div class="card">
    <img class="card-img-top" src="http://placehold.jp/ffffff/ffffff/250x250.png" alt="Card image cap" style="width: 100%; height: 250px">
      <% current_order.order_items.order(:product_group_id).each do |oi| %>
        <%= image_tag(oi.product.image, {:style => "position: absolute; width: 100%; height: 250px; max-width: 400px"}) if oi.product.image.present? %>
      <% end %>
  </div>
  <%= button_to "Jetzt Bestellen", place_order_path, :method => :get, :class => "btn btn-primary btn-lg mb-5 mt-5 w-100" %>
</div>

